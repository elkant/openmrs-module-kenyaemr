<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kenyaemr.covid.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
		<property name="targetUuid" value="e7ee7548-6958-4361-bed9-ee2614423947" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kenyaemr.calculation.library.hiv.EligibleForHivProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kenyaemr.covid.form.enrollment" />
		<property name="defaultCompletionForm" ref="kenyaemr.covid.form.completion" />
		<property name="visitForms" >
			<set>
			</set>
		</property>
	
		<property name="reports">
			<set>
				<ref bean="kenyaemr.covid.report.enrolledInCovid" />
				<ref bean="kenyaemr.covid.report.covidLineList" />
				<ref bean="kenyaemr.covid.report.discontinuedOnCovid" />
			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kenyaemr:program/covid/covidInitiationSummary" />
				<entry key="care-panel" value="kenyaemr:program/covid/covidCarePanel" />
				<entry key="completion-summary" value="kenyaemr:program/covid/covidOutcomeSummary" />
			</map>
		</property>
		<property name="order" value="300" />
	</bean>

	<!-- ===================== Identifiers ===================== -->

