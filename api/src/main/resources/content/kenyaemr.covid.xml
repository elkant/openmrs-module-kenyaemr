	<!-- ===================== Forms ===================== -->

	<!--COVID Enrollment-->

	<bean id="kenyaemr.covid.form.enrollment" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="0fe60b26-8648-438b-afea-8841dcd993c6" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.registration" />
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.surveillance" />
			</set>enr
		</property>
		<property name="icon" value="kenyaui:forms/generic.png" />
		<property name="htmlform" value="kenyaemr:covid/covidClinicalForm.html" />
		<property name="order" value="201005" />
	</bean>



	<!--Covid Completion -->
	<bean id="kenyaemr.covid.form.completion" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="8f4e3e83-c597-47ad-8999-b788e8255d20" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.registration" />
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.surveillance" />
			</set>
		</property>
		<property name="icon" value="kenyaui:forms/completion.png" />
		<property name="htmlform" value="kenyaemr:covid/covidOutcome.html" />
	</bean>

	<!-- ===================== Reports ===================== -->

	<bean id="kenyaemr.covid.report.enrolledInCovid" class="org.openmrs.module.kenyacore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="90e6d38a-c146-4a8f-9580-d00bca4e0075" />
		<property name="name" value="Cases under investigation for COVID-19" />
		<property name="description" value="Cases under investigation for COVID-19" />
		<property name="calculation" value="org.openmrs.module.kenyaemr.calculation.library.covid.OnCovidProgramCalculation" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
	</bean>

	<bean id="kenyaemr.covid.report.discontinuedOnCovid" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
		<property name="targetUuid" value="1b2555e4-a608-4dc2-ac43-6ccbaa2849ee" />
		<property name="name" value="Discharged Covid Patients" />
		<property name="description" value="Discontinued Patients" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
	</bean>

	<bean id="kenyaemr.covid.report.covidLineList" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
		<property name="targetUuid" value="a3625ff5-579d-4e13-8ebb-5d08c7cc1dd5" />
		<property name="name" value="Covid-19 Line List" />
		<property name="description" value="Covid-19 Line List" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
		<property name="template" value="kenyaemr:covid/COVID_19_Line_List.xls" />
		<property name="repeatingSection" value="sheet:2,row:2,dataset:CovidLinelist" />
	</bean>
</beans>